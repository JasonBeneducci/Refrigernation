<h1><%=@user.name%>'s Refrigerator</h1>
<h3>Username: <%=@user.username%></h3>
<%=button_to "See Fruit Dictionary", fruits_path, method: :get%>
<%=button_to "Make Smoothies", smoothies_path, method: :get%>
<%if flash[:messages] && flash[:messages].length > 0%>
    <h3>Insufficient fruits to create smoothies:</h3>
    <ul>
        <%flash[:messages].each do |message|%>
            <li><%=message%></li>
        <%end%>
    </ul>
<%end%>
<%=button_to "Buy More", cart_path, method: :get%>
<ul>
    <%@fruits.each do |fruit|%>
        <li><font size="50"><%=link_to fruit.image, item_path(Item.find_by(fruit: fruit, user: @user))%></font></li>
    <%end%>
</ul>
<%=button_to "Edit Account", edit_user_path(@user), method: :get%>
<%=button_to "Log Out", logout_path, method: :delete%>
