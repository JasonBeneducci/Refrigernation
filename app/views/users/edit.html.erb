<div class="smoothie-header">
  <h1>Edit User</h1>
</div>

<div class="d-flex justify-content-center ">

  <div class="text-center">
      <div class="login-form">
        <div class="signup-text">
          <%= form_for @user do |f| %>
            Name: <%= f.text_field :name%><br />
            <br>
            Username: <%= f.text_field :username%><br />
            <br>
            Password: <%= f.password_field :password, placeholder: "Enter Password"%><br />
            <br>
            Confirm Password: <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %><br />
            <br>
            <center><%= f.submit "Edit"%></center>
          <% end %>
        </div>

          <%if flash[:messages]%>
              <center><%=flash[:messages][0]%></center>
          <%end%>
      </div>
  </div>
</div>
